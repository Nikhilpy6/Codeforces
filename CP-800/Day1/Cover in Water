t = int(input())
while t:
    n = int(input())
    s = input()
    count = 0
    dot = 0
    for i in range(0, n):
        if s[i] == ".":
            dot += 1
            count += 1
        elif s[i] == "#":
            dot = 0
        if dot == 3:
            break
    if dot == 3:
        print(2)
    else:
        print(count)
    t -= 1
