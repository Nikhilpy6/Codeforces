def isSorted(a,n):
    for i in range(1,n):
        if(a[i-1]>a[i]):
            return False
    return True
        
t=int(input())
while(t):
    n,k=map(int,input().split())
    a=list(map(int,input().split()))
    if(isSorted(a,n)):
        print("Yes")
    elif(k>=2):
        print("Yes")
    
    else:
        print("No")
    t-=1
    